{
  "name": "app",
  "author": "github.com/9renpto",
  "dependencies": {
    "@types/react-native": "^0.63.0",
    "@types/yup": "^0.29.0",
    "babel-plugin-cssta": "^0.9.0",
    "cssta": "^0.9.4",
    "formik": "^2.0.6",
    "react": "^16.12.0",
    "react-art": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-native": "^0.63.0",
    "react-native-elements": "^2.0.0",
    "react-native-vector-icons": "^7.0.0",
    "react-native-web": "^0.11.7",
    "typescript-styled-plugin": "^0.15.0",
    "yup": "^0.29.0"
  },
  "devDependencies": {
    "@9renpoto/eslint-config-react": "7.0.3",
    "@9renpoto/eslint-config-typescript": "7.0.3",
    "@9renpoto/stylelint-config": "7.0.3",
    "@babel/core": "7.11.4",
    "@babel/plugin-proposal-class-properties": "7.10.4",
    "@babel/preset-typescript": "7.10.4",
    "@react-native-community/eslint-config": "2.0.0",
    "@storybook/react": "6.0.18",
    "@types/enzyme": "3.10.5",
    "@types/faker": "4.1.12",
    "@types/jest": "26.0.10",
    "babel-jest": "26.3.0",
    "babel-loader": "8.1.0",
    "babel-plugin-lodash": "3.3.4",
    "babel-plugin-react-native-web": "0.13.8",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.3",
    "faker": "5.0.0",
    "husky": "4.2.5",
    "jest": "26.4.2",
    "jest-enzyme": "7.1.2",
    "lerna": "3.22.1",
    "lint-staged": "10.2.13",
    "npm-run-all": "4.1.5",
    "prettier-eslint-cli": "5.0.0",
    "stylelint": "13.6.1",
    "stylelint-config-recommended": "3.0.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-processor-styled-components": "1.10.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "prettier-eslint --write",
      "git add"
    ]
  },
  "main": "n/a",
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "private": true,
  "repository": "ssh://git@github.com/9renpoto/app.git",
  "scripts": {
    "build": "lerna run build --parallel",
    "bump": "lerna version --no-git-tag-version --no-push && lerna-changelog",
    "clean": "lerna run clean --parallel && lerna clean",
    "lint": "run-s -l lint:*",
    "lint:eslint": "npx eslint . --ext=ts,tsx",
    "lint:pkg": "lerna run lint --parallel",
    "lint:prettier": "prettier --check './{packages,apps}/**/*.{js,jsx,ts,tsx}'",
    "lint:style": "stylelint packages/**/**/*.tsx",
    "start": "storybook-server -p 7007",
    "test": "lerna run test"
  },
  "stylelint": {
    "processors": [
      "stylelint-processor-styled-components"
    ],
    "extends": [
      "@9renpoto/stylelint-config",
      "stylelint-config-recommended",
      "stylelint-config-styled-components"
    ]
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}
