{
  "name": "@9renpoto/app",
  "version": "0.0.1",
  "dependencies": {
    "@types/react": "16.7.18",
    "@types/react-native": "0.57.23",
    "react": "16.7.0",
    "react-native": "0.57.8"
  },
  "devDependencies": {
    "@9renpoto/tslint-config": "4.7.0",
    "@types/jest": "23.3.10",
    "@types/react-test-renderer": "16.0.3",
    "babel-preset-react-native": "4.0.1",
    "codecov": "3.1.0",
    "husky": "1.3.0",
    "jest": "23.6.0",
    "lint-staged": "8.1.0",
    "npm-run-all": "4.1.5",
    "prettier-eslint-cli": "4.7.1",
    "react-native-typescript-transformer": "1.2.11",
    "react-test-renderer": "16.7.0",
    "snyk": "1.119.0",
    "ts-jest": "23.10.5",
    "tslint": "5.12.0",
    "tslint-react": "3.6.0",
    "typescript": "3.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "warnOnly": true
        }
      }
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "preset": "react-native",
    "collectCoverage": true
  },
  "lint-staged": {
    "linters": {
      "*.{md,js,json}": [
        "prettier --write",
        "git add"
      ],
      "*.{ts,tsx}": [
        "prettier --write",
        "tslint --fix",
        "git add"
      ]
    },
    "ignore": [
      "package.json"
    ]
  },
  "private": true,
  "scripts": {
    "coverage": "codecov -f ./coverage/lcov.info",
    "lint": "run-p lint:*",
    "lint:es": "tslint src/**/*.{ts,tsx}",
    "lint:types": "tsc -p . --noEmit",
    "prepare": "npm run snyk-protect",
    "prepublish": "npm run snyk-protect",
    "snyk-protect": "snyk protect",
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest"
  },
  "snyk": true
}
