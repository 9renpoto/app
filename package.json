{
  "name": "app",
  "author": "github.com/9renpto",
  "dependencies": {
    "@types/styled-components": "4.1.19",
    "babel-plugin-react-native-web": "0.11.7",
    "react-native": "0.59.10",
    "react-native-elements": "1.0.0-beta8",
    "react-native-vector-icons": "6.6.0",
    "react-native-web": "0.11.7",
    "styled-components": "4.4.0"
  },
  "devDependencies": {
    "@babel/core": "7.6.4",
    "@react-native-community/eslint-config": "0.0.5",
    "@storybook/react": "5.2.5",
    "@types/jest": "24.0.19",
    "babel-loader": "8.0.6",
    "babel-plugin-macros": "2.6.1",
    "husky": "3.0.9",
    "jest": "24.9.0",
    "lerna": "3.18.3",
    "lint-staged": "9.4.2",
    "npm-run-all": "4.1.5",
    "prettier-eslint-cli": "5.0.0",
    "require-context.macro": "1.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier-eslint --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "prettier-eslint --write",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "textlint --fix",
      "git add"
    ]
  },
  "main": "n/a",
  "prettier": {
    "bracketSpacing": false,
    "jsxBracketSameLine": true,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "private": true,
  "repository": "ssh://git@github.com/9renpoto/app.git",
  "scripts": {
    "build": "lerna run build --parallel",
    "bump": "lerna version --no-git-tag-version --no-push && lerna-changelog",
    "clean": "lerna run clean --parallel && lerna clean",
    "lint": "run-s -l lint:*",
    "lint:eslint": "npx eslint . --ext=ts,tsx",
    "lint:pkg": "lerna run lint --parallel",
    "lint:prettier": "prettier --check './{packages,sandbox,apps}/**/*.{js,jsx,ts,tsx,gql,graphql}'",
    "test": "lerna run test"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}
